      </None>
    </ItemGroup>

    <ItemGroup>
      <None Include="Data\shader\movetexture.frag">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="WatsonWebsocket" Version="4.1.2" />
    </ItemGroup>

</Project>
